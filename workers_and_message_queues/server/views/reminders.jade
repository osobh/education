extends layout

block content
  h1 Reminders Queued
  .col-md-6
    .row
      .col-md-3
        h3 Morning
        .panel-body
        each reminder in morning
          li= reminder.title
      .col-md-3
        h3 Lunch
        .panel-body
        each reminder in lunch
          li= reminder.title
    .row
      .col-md-3
        h3 Evening
        each reminder in evening
          li= reminder.title
      .col-md-3
        h3 Late
        each reminder in late
          li= reminder.title
  .col-md-6
    form(action="reminders", method="POST").form.well.col-md-6
      h3 New Reminder
      .form-group
        input(name="title", type="text", placeholder="Title of Reminder")
      .form-group
        input(name="body", type="text", placeholder="Body of Text")
      .form-group
        select(name="time")
          option(value="morning") Morning - 9:00
          option(value="lunch") Lunchtime - 12:00
          option(value="evening") Evening - 6:00
          option(value="late") Late - 10:00
      .form-group
        input(type="submit")
